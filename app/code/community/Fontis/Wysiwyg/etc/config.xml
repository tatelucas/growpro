<config>
    <modules>
        <Fontis_Wysiwyg>
            <version>1.0.5</version>
        </Fontis_Wysiwyg>
    </modules>
    <global>
        <helpers>
            <fontis_wysiwyg>
                <class>Fontis_Wysiwyg_Helper</class>
            </fontis_wysiwyg>
        </helpers>
        <models>
            <fontis_wysiwyg>
                <class>Fontis_Wysiwyg_Model</class>
            </fontis_wysiwyg>
        </models>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <fontis_wysiwyg>
                    <file>fontis_wysiwyg.xml</file>
                </fontis_wysiwyg>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <admin>
            <fontis_wysiwyg>
                <active>0</active>
                <editor_type>fckeditor</editor_type>
                <editable_areas>description,short_description,page_content,block_content,_generaldescription,text</editable_areas>
                <fckeditor_toolbarset>Default</fckeditor_toolbarset>
                <fckeditor_skin>default</fckeditor_skin>
                <fckeditor_upload_path>media/upload</fckeditor_upload_path>
            </fontis_wysiwyg>
        </admin>
    </default>
</config>
